
<div class="container">
  <div class="row my-5">
  <% @posts.each do |post| %>
  <div class="card col-sm-12 col-md-6 col-lg-4">
    <div class="post">
      <div class="card-img-top" style="background-image: url(<%= url_for(post.photo) %>)">
        <h5 class="card-title"><%= post.title %></h5>
      </div>
      <div class="card-body">
        <p class="card-text"><%= post.content %></p>
        <div class="emoji-buttons">
          <%= link_to "#",
            class:"btn emoji-btn #{bg_status(Emoji.where(emoji: "smiley", user_id: current_user.id, post_id: post.id).first)}",
            data: {reflex: "click->EmojisReflex#smiley", post_id: post.id, user_id: current_user.id} do %>
            ğŸ˜„ <%= tag.span post.emojis.where(emoji: "smiley").count, id: "post-#{post.id}-smileys" %>
          <% end %>
          <%= link_to "#",
            class:"btn emoji-btn #{bg_status(Emoji.where(emoji: "sad", user_id: current_user.id, post_id: post.id).first)}",
            data: {reflex: "click->EmojisReflex#sad", post_id: post.id, user_id: current_user.id} do %>
            ğŸ˜­ <%= tag.span post.emojis.where(emoji: "sad").count, id: "post-#{post.id}-sads" %>
          <% end %>
          <%= link_to "#",
            class:"btn emoji-btn #{bg_status(Emoji.where(emoji: "like", user_id: current_user.id, post_id: post.id).first)}",
            data: {reflex: "click->EmojisReflex#like", post_id: post.id, user_id: current_user.id} do %>
            ğŸ‘ <%= tag.span post.emojis.where(emoji: "like").count, id: "post-#{post.id}-likes" %>
          <% end %>
          <%= link_to "#",
            class:"btn emoji-btn #{bg_status(Emoji.where(emoji: "dislike", user_id: current_user.id, post_id: post.id).first)}",
            data: {reflex: "click->EmojisReflex#dislike", post_id: post.id, user_id: current_user.id} do %>
            ğŸ‘ <%= tag.span post.emojis.where(emoji: "dislike").count, id: "post-#{post.id}-dislikes" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  </div>
</div>

<h4 class="text-center">Do you want to add your own post ?</h4>
<div class="card w-25 p-4 my-4 mx-auto">
  <%= simple_form_for([current_user, @post]) do |f| %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Save", class:"btn btn-primary" %>
  <% end %>
</div>
